@model ProgrammersBlog.Entities.Dtos.UserUpdateDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Profil Düzenle";

}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <h4 class="text-center"><span class="fas fa-edit"></span> Profil Düzenle</h4>
            <div class="card-body">
                <form asp-action="ChangeDetails" method="post" asp-controller="User" id="form-user-update">                    
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" ></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName" placeholder="Lütfen, kullanıcı adı giriniz." />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" type="email" placeholder="Lütfen, e-posta adresi giriniz." />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber" type="text" placeholder="Lütfen, telefon numarsı giriniz." />
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture"></label>
                        <input asp-for="Picture" type="hidden" />
                        <img class="my-image" src="~/img/@Model.Picture" alt="@Model.UserName" />
                        
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input class="form-control-file" accept="image/*" asp-for="PictureFile" type="file" placeholder="Lütfen, telefon numarsı giriniz." />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span> Kaydet</button>
                        <a class="btn btn-danger btn-block" asp-area="admin" asp-action="Index" asp-controller="Home"><span class="fas fa-times"></span> İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>